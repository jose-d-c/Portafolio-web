---
import "../styles/theme.css";
import "../styles/app.css";

const { title = "Portafolio | Jose David Consuegra Medina" } = Astro.props;
---

<!doctype html>
<html lang="es" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta
      name="description"
      content="Portafolio de Jose David Consuegra Medina enfocado en ciberseguridad, redes y servidores."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700&family=Space+Grotesk:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <script is:inline>
      try {
        const theme = localStorage.getItem("theme");
        document.documentElement.setAttribute("data-theme", theme === "light" ? "light" : "dark");
      } catch {
        document.documentElement.setAttribute("data-theme", "dark");
      }
    </script>
  </head>
  <body>
    <slot />
    <script>
      import "../scripts/main.ts";
    </script>
  </body>
</html>

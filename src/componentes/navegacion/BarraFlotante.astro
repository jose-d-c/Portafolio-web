---
/**
 * Barra de navegacion (debajo de la portada).
 * Horizontal, extendida, sin envolverse.
 */
---

<nav class="barra panel" aria-label="Navegacion">
  <a class="item" data-vista="sobre-mi" href="#sobre-mi" title="Sobre mi" aria-label="Sobre mi">
    <svg viewBox="0 0 24 24" width="22" height="22" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M20 21a8 8 0 1 0-16 0"/>
      <circle cx="12" cy="7" r="4"/>
    </svg>
    <span class="texto">Sobre mi</span>
  </a>

  <a class="item" data-vista="proyectos" href="#proyectos" title="Proyectos" aria-label="Proyectos">
    <svg viewBox="0 0 24 24" width="22" height="22" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M3 7h6l2 2h10v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V7z"/>
    </svg>
    <span class="texto">Proyectos</span>
  </a>

  <a class="item" data-vista="habilidades" href="#habilidades" title="Habilidades" aria-label="Habilidades">
    <svg viewBox="0 0 24 24" width="22" height="22" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M13 2L3 14h7l-1 8 10-12h-7l1-8z"/>
    </svg>
    <span class="texto">Habilidades</span>
  </a>

  <button class="item tema" type="button" onclick="window.alternarTema()" title="Cambiar tema" aria-label="Cambiar tema">
    <svg viewBox="0 0 24 24" width="22" height="22" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M21 12.8A9 9 0 1 1 11.2 3a7 7 0 0 0 9.8 9.8z"/>
    </svg>
    <span class="texto">Tema</span>
  </button>
</nav>

<style>
/* Barra horizontal y extendida */
.barra{
  width: 100%;
  margin-top: 16px;
  margin-bottom: 16px;
  padding: 10px;
  border-radius: 18px;
  box-shadow: var(--glow);

  display: grid;
  grid-template-columns: 1fr 1fr 1fr auto; /* 3 secciones + tema */
  gap: 10px;

  /* Nunca se vuelve vertical */
  white-space: nowrap;
}

/* Botones grandes, centrados, sin wrap */
.item{
  display:flex;
  align-items:center;
  justify-content:center;
  gap: 10px;

  padding: 14px 16px;
  border-radius: 16px;
  border: 1px solid rgba(255,255,255,0.10);
  background: rgba(255,255,255,0.04);
  color: var(--texto);
  cursor: pointer;
  user-select: none;

  font-weight: 650;
  min-width: 0; /* clave para grid */
}

.item:hover{
  background: rgba(255,255,255,0.08);
  transition: 160ms;
}

.item.activa{
  border-color: rgba(124,58,237,0.55);
  background: rgba(124,58,237,0.14);
  box-shadow: var(--glow);
}

.texto{
  font-size: 20px;
}

/* Boton tema un poco mas compacto */
.tema{
  padding-left: 18px;
  padding-right: 18px;
}

/* En pantallas peque√±as: NO se apila. Se vuelve scrolleable horizontal */
@media (max-width: 760px){
  .barra{
    display: flex;
    overflow-x: auto;
    gap: 10px;
  }
  .item{
    flex: 0 0 auto;
    justify-content: flex-start;
  }
  .barra::-webkit-scrollbar{ height: 8px; }
  .barra::-webkit-scrollbar-thumb{
    background: rgba(255,255,255,0.12);
    border-radius: 999px;
  }
}
</style>

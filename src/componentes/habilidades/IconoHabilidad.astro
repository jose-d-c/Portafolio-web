---
/**
 * Componente: IconoHabilidad
 * Responsabilidad: Mostrar un icono SVG segun el id de la habilidad.
 * Motivo: Iconos consistentes sin depender de librerias externas.
 */

const { id, tam = 26 } = Astro.props;
---

{ id === "linux" ? (
  <svg width={tam} height={tam} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
    <path d="M4 5h16v10H4z"/>
    <path d="M8 19h8"/>
    <path d="M9 9h.01M12 9h.01M15 9h.01"/>
  </svg>
) : id === "redes" ? (
  <svg width={tam} height={tam} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
    <circle cx="6" cy="12" r="2"/>
    <circle cx="18" cy="6" r="2"/>
    <circle cx="18" cy="18" r="2"/>
    <path d="M8 12h8"/>
    <path d="M16.5 7.5 8 11"/>
    <path d="M16.5 16.5 8 13"/>
  </svg>
) : id === "servidores" ? (
  <svg width={tam} height={tam} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
    <rect x="4" y="4" width="16" height="6" rx="2"/>
    <rect x="4" y="14" width="16" height="6" rx="2"/>
    <path d="M8 7h.01M8 17h.01"/>
  </svg>
) : (
  /* ciberseguridad */
  <svg width={tam} height={tam} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
    <path d="M12 2l8 4v6c0 5-3.5 9-8 10-4.5-1-8-5-8-10V6l8-4z"/>
    <path d="M9.5 12.5 11 14l3.5-4"/>
  </svg>
) }

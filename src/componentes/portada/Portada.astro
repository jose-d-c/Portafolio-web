---
import { perfil } from "../../datos/perfil";
---

<header class="panel portada">
  <div class="fotoWrap" aria-label="Foto de perfil">
    <img class="foto" src={perfil.foto} alt={`Foto de ${perfil.nombreCompleto}`} />
    <div class="marco"></div>
  </div>

  <div>
    <h1 class="nombre">{perfil.nombreCompleto}</h1>
    <p class="rol">{perfil.titulo}</p>
    <p class="textoSuave enfoque">{perfil.enfoque}</p>

    <div class="acciones">
      <a class="boton botonPrimario" href="/cv.pdf" target="_blank" rel="noreferrer">Descargar CV</a>
      <a class="boton botonContacto correo" href={perfil.correoElectronico} aria-label="Enviar correo electrónico">
        <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
          <rect x="3" y="5" width="18" height="14" rx="2" />
          <path d="M3 7l9 6 9-6" />
        </svg>
        Correo electrónico
      </a>
      <a
        class="boton botonContacto whatsapp"
        href={perfil.whatsapp}
        target="_blank"
        rel="noreferrer"
        aria-label="Contactar por WhatsApp"
      >
        <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
          <path d="M20 11.5A8.5 8.5 0 0 1 7.7 19L4 20l1.1-3.6A8.5 8.5 0 1 1 20 11.5Z" />
          <path d="M9.6 9.4c.2-.4.3-.4.5-.4h.4c.1 0 .4 0 .6.5.2.5.8 1.8.8 1.9.1.1.1.3 0 .5-.1.2-.2.3-.4.5-.1.1-.3.3-.4.4-.1.1-.2.3 0 .5.2.2.9 1.4 2.1 1.9 1.4.7 1.4.4 1.7.4.2 0 .8-.3.9-.6.1-.3.3-.6.2-.7-.1-.1-.2-.2-.5-.3l-.9-.4c-.2-.1-.4-.1-.5.1-.1.2-.6.7-.7.8-.1.1-.3.1-.5 0s-.9-.4-1.7-1.1c-.7-.6-1.1-1.2-1.2-1.4-.1-.2 0-.3.1-.5l.4-.4c.1-.1.2-.2.3-.4.1-.1.1-.3.1-.4s-.4-1-.6-1.4c-.2-.4-.4-.4-.6-.4h-.4c-.1 0-.3 0-.5.2-.2.2-.8.7-.8 1.7s.8 2 1 2.1c.1.1 1.6 2.5 4 3.5s2.4.6 2.8.6c.4 0 1.3-.5 1.5-1 .2-.6.2-1 .2-1.1s-.1-.2-.3-.3" />
        </svg>
        WhatsApp
      </a>
    </div>
  </div>
</header>

<style>
.portada{
  display:grid;
  grid-template-columns: 300px 1fr;
  gap: 26px;
  align-items:center;
  padding: 24px;
  border-radius: 24px;
  box-shadow: var(--glow);
}

/* CIRCULO REAL (varios respaldos) */
.fotoWrap{
  position: relative;
  width: 270px;
  height: 270px;
  aspect-ratio: 1 / 1;

  border-radius: 50%;
  overflow: hidden;

  /* respaldo extra si algo interfiere */
  clip-path: circle(50% at 50% 50%);
  -webkit-mask-image: radial-gradient(circle, #000 66%, transparent 67%);
  mask-image: radial-gradient(circle, #000 66%, transparent 67%);
}

.foto{
  width: 100%;
  height: 100%;
  display:block;
  object-fit: cover;
  object-position: center;
  border-radius: 50%;
  transform: scale(1.03);
}

.marco{
  position:absolute;
  inset: 0;
  border-radius: 50%;
  border: 3px solid rgba(255,255,255,0.18);
  box-shadow: var(--glow);
}

.marco::before{
  content:"";
  position:absolute;
  inset: -34px;
  border-radius: 50%;
  background: conic-gradient(
    from 180deg,
    rgba(124,58,237,0.85),
    rgba(37,99,235,0.85),
    rgba(34,211,238,0.70),
    rgba(124,58,237,0.85)
  );
  opacity: .16;
  filter: blur(16px);
}

.nombre{
  margin: 0;
  font-family: var(--fuente-titulos);
  font-size: 40px;
  line-height: 1.1;
  letter-spacing: 0.6px;
}

.rol{ margin: 12px 0 12px; opacity: .92; font-size: 24px; }
.enfoque{ margin: 0; font-size: 20px; }

.acciones{ display:flex; flex-wrap:wrap; gap: 12px; margin-top: 18px; }

.botonContacto{
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  line-height: 1;
}

.botonContacto svg{
  display: block;
  width: 20px;
  height: 20px;
  flex: 0 0 20px;
}

.correo{
  border-color: color-mix(in srgb, #60a5fa 55%, transparent);
  background: color-mix(in srgb, #60a5fa 17%, transparent);
}

.whatsapp{
  border-color: color-mix(in srgb, #22c55e 55%, transparent);
  background: color-mix(in srgb, #22c55e 17%, transparent);
}

@media (max-width: 760px){
  .portada{ grid-template-columns: 1fr; }
  .fotoWrap{ margin: 0 auto; }
  .nombre{ font-size: 34px; }
}
</style>

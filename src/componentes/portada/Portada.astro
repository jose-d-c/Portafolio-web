---
import { perfil } from "../../datos/perfil";
---

<header class="panel portada">
  <div class="fotoWrap" aria-label="Foto de perfil">
    <img class="foto" src={perfil.foto} alt={`Foto de ${perfil.nombreCompleto}`} />
    <div class="marco"></div>
  </div>

  <div>
    <h1 class="nombre">{perfil.nombreCompleto}</h1>
    <p class="rol">{perfil.titulo}</p>
    <p class="textoSuave enfoque">{perfil.enfoque}</p>

    <div class="acciones">
      <a class="boton botonPrimario" href="/cv.pdf" target="_blank" rel="noreferrer">Descargar CV</a>
      <a class="boton botonContacto correo" href={perfil.correoElectronico} aria-label="Enviar correo electrónico">
        <svg viewBox="0 0 16 16" width="20" height="20" fill="currentColor" aria-hidden="true">
          <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v.22L8 8.95.01 4.22V4zm0 1.38V12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V5.38L8.47 9.76a.75.75 0 0 1-.94 0L0 5.38z" />
        </svg>
        Correo electrónico
      </a>
      <a
        class="boton botonContacto whatsapp"
        href={perfil.whatsapp}
        target="_blank"
        rel="noreferrer"
        aria-label="Contactar por WhatsApp"
      >
        <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor" aria-hidden="true">
          <path d="M17.47 14.38c-.27-.14-1.6-.79-1.85-.88-.25-.09-.43-.14-.61.14-.18.27-.7.88-.86 1.06-.16.18-.32.2-.59.07-.27-.14-1.16-.43-2.2-1.37-.81-.73-1.36-1.63-1.52-1.9-.16-.27-.02-.41.12-.55.13-.13.27-.34.41-.5.14-.16.18-.27.27-.45.09-.18.05-.34-.02-.48-.07-.14-.61-1.47-.84-2.01-.22-.54-.45-.46-.61-.47l-.52-.01c-.18 0-.48.07-.73.34-.25.27-.96.94-.96 2.29 0 1.35.99 2.66 1.12 2.84.14.18 1.95 2.98 4.72 4.18.66.29 1.18.46 1.58.59.66.21 1.25.18 1.72.11.53-.08 1.6-.65 1.83-1.28.23-.63.23-1.16.16-1.28-.07-.11-.25-.18-.52-.31Z" />
          <path d="M20.52 3.48A11.84 11.84 0 0 0 12.04 0C5.54 0 .25 5.29.25 11.79c0 2.08.54 4.11 1.56 5.9L0 24l6.47-1.7a11.79 11.79 0 0 0 5.57 1.42h.01c6.5 0 11.79-5.29 11.79-11.79 0-3.15-1.23-6.11-3.32-8.45Zm-8.47 18.25h-.01a9.8 9.8 0 0 1-4.99-1.37l-.36-.21-3.84 1.01 1.03-3.75-.23-.38a9.82 9.82 0 0 1-1.5-5.23c0-5.41 4.41-9.82 9.83-9.82 2.62 0 5.08 1.02 6.93 2.88a9.76 9.76 0 0 1 2.87 6.94c0 5.42-4.41 9.83-9.83 9.83Z" />
        </svg>
        WhatsApp
      </a>
    </div>
  </div>
</header>

<style>
.portada{
  display:grid;
  grid-template-columns: 300px 1fr;
  gap: 26px;
  align-items:center;
  padding: 24px;
  border-radius: 24px;
  box-shadow: var(--glow);
}

/* CIRCULO REAL (varios respaldos) */
.fotoWrap{
  position: relative;
  width: 270px;
  height: 270px;
  aspect-ratio: 1 / 1;

  border-radius: 50%;
  overflow: hidden;

  /* respaldo extra si algo interfiere */
  clip-path: circle(50% at 50% 50%);
  -webkit-mask-image: radial-gradient(circle, #000 66%, transparent 67%);
  mask-image: radial-gradient(circle, #000 66%, transparent 67%);
}

.foto{
  width: 100%;
  height: 100%;
  display:block;
  object-fit: cover;
  object-position: center;
  border-radius: 50%;
  transform: scale(1.03);
}

.marco{
  position:absolute;
  inset: 0;
  border-radius: 50%;
  border: 3px solid rgba(255,255,255,0.18);
  box-shadow: var(--glow);
}

.marco::before{
  content:"";
  position:absolute;
  inset: -34px;
  border-radius: 50%;
  background: conic-gradient(
    from 180deg,
    rgba(124,58,237,0.85),
    rgba(37,99,235,0.85),
    rgba(34,211,238,0.70),
    rgba(124,58,237,0.85)
  );
  opacity: .16;
  filter: blur(16px);
}

.nombre{
  margin: 0;
  font-family: var(--fuente-titulos);
  font-size: 40px;
  line-height: 1.1;
  letter-spacing: 0.6px;
}

.rol{ margin: 12px 0 12px; opacity: .92; font-size: 24px; }
.enfoque{ margin: 0; font-size: 20px; }

.acciones{ display:flex; flex-wrap:wrap; gap: 12px; margin-top: 18px; }

.botonContacto{
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  line-height: 1;
}

.botonContacto svg{
  display: block;
  width: 20px;
  height: 20px;
  flex: 0 0 20px;
}

.correo{
  border-color: color-mix(in srgb, #60a5fa 60%, transparent);
  background: color-mix(in srgb, #60a5fa 20%, transparent);
}

.whatsapp{
  border-color: color-mix(in srgb, #22c55e 60%, transparent);
  background: color-mix(in srgb, #22c55e 20%, transparent);
}

html[data-tema="claro"] .correo{
  border-color: #2563eb;
  background: #ffffff;
  color: #1d4ed8;
}

html[data-tema="claro"] .whatsapp{
  border-color: #16a34a;
  background: #ffffff;
  color: #15803d;
}

@media (max-width: 760px){
  .portada{ grid-template-columns: 1fr; }
  .fotoWrap{ margin: 0 auto; }
  .nombre{ font-size: 34px; }
}
</style>

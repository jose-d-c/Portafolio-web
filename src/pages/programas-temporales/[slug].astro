---
import DisenoBase from "../../layouts/DisenoBase.astro";
import { readFile } from "node:fs/promises";
import { join } from "node:path";
import { programasTemporales } from "../../programas-temporales/programas";

export function getStaticPaths() {
  return programasTemporales.map((programa) => ({
    params: { slug: programa.slug },
    props: { programa },
  }));
}

const { programa } = Astro.props;
const codigoPlantilla = await readFile(
  join(process.cwd(), "public", programa.rutaCodigoPlantilla.replace(/^\//, "")),
  "utf-8"
);
---

<DisenoBase titulo={`${programa.titulo} | Programas temporales`}>
  <main class="contenedor pagina-programa">
    <section class="panel bloque encabezado-programa">
      <img src="/programas-temporales/uis-logo.svg" alt="Logotipo de la Universidad Industrial de Santander" loading="eager" decoding="async" />
      <div>
        <p>Estructura de Datos y Analisis Algoritmicos</p>
        <p>Jose David Consuegra Medina</p>
        <p>2250167 codigo de estudiante</p>
        <p>Universidad Industrial de Santander</p>
      </div>
    </section>

    <section class="panel bloque">
      <h1>{programa.titulo}</h1>
      <p class="textoSuave">
        Espacio reservado para documentar el programa. Puedes actualizar esta pagina con el contenido final cuando
        este disponible.
      </p>
    </section>

    <section class="panel bloque zona-codigo">
      <div class="encabezado-cuadro">
        <h2>Codigo del programa</h2>
        <button class="boton-copiar" type="button" aria-label="Copiar codigo">
          <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor" aria-hidden="true">
            <path d="M8 7a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2h-9a2 2 0 0 1-2-2V7Zm2 0h9v11h-9V7Z" />
            <path d="M5 4a2 2 0 0 1 2-2h9v2H7v11H5V4Zm-2 5h2v11a2 2 0 0 0 2 2h11v2H7a2 2 0 0 1-2-2V9Z" />
          </svg>
          Copiar
        </button>
      </div>

      <pre class="cuadro-codigo"><code>{codigoPlantilla}</code></pre>
    </section>

    <section class="panel bloque zona-imagen">
      <h2>Imagen de presentacion</h2>
      <div class="marco-imagen">
        <img
          src={programa.rutaImagenPlantilla}
          alt={`Imagen temporal de ${programa.titulo}`}
          loading="lazy"
          decoding="async"
        />
      </div>
    </section>
  </main>

  <script is:inline>
    const botonCopiar = document.querySelector(".boton-copiar");
    const nodoCodigo = document.querySelector(".cuadro-codigo");

    botonCopiar?.addEventListener("click", async () => {
      if (!nodoCodigo) return;

      const texto = nodoCodigo.textContent ?? "";

      try {
        await navigator.clipboard.writeText(texto);
        const etiquetaOriginal = botonCopiar.innerHTML;
        botonCopiar.innerHTML = "âœ… Copiado";
        setTimeout(() => {
          botonCopiar.innerHTML = etiquetaOriginal;
        }, 1400);
      } catch {
        const seleccion = window.getSelection();
        const rango = document.createRange();
        rango.selectNodeContents(nodoCodigo);
        seleccion?.removeAllRanges();
        seleccion?.addRange(rango);
      }
    });
  </script>
</DisenoBase>

<style>
.pagina-programa{
  display: grid;
  gap: 16px;
}

.bloque{
  padding: 22px;
  border-radius: 18px;
}

.encabezado-programa{
  display: grid;
  grid-template-columns: 110px 1fr;
  gap: 18px;
  align-items: center;
}

.encabezado-programa img{
  width: 100%;
  max-width: 110px;
  background: #fff;
  border-radius: 12px;
  padding: 6px;
}

.encabezado-programa p{
  margin: 0;
  line-height: 1.35;
  font-size: clamp(22px, 2.5vw, 32px);
  font-weight: 600;
}

h1{
  margin: 0 0 8px;
  font-family: var(--fuente-titulos);
  font-size: 34px;
}

h2{
  margin: 0 0 8px;
  font-size: 24px;
}

.encabezado-cuadro{
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
}

.boton-copiar{
  display: inline-flex;
  align-items: center;
  gap: 8px;
  border: 1px solid var(--borde);
  background: var(--bg-btn);
  color: var(--texto);
  border-radius: 12px;
  padding: 8px 12px;
  cursor: pointer;
  font-size: 15px;
}

.cuadro-codigo{
  margin: 8px 0 0;
  min-height: 460px;
  max-height: 460px;
  overflow: auto;
  border: 1px dashed var(--borde);
  border-radius: 14px;
  padding: 14px;
  background: var(--bg-item);
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", monospace;
  font-size: 15px;
  line-height: 1.55;
}

.marco-imagen{
  min-height: 460px;
  border-radius: 14px;
  border: 1px dashed var(--borde);
  display: grid;
  place-items: center;
  overflow: hidden;
  padding: 10px;
  background: var(--bg-item);
}

.marco-imagen img{
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 10px;
}

@media (max-width: 760px){
  .encabezado-programa{
    grid-template-columns: 1fr;
    text-align: center;
    justify-items: center;
  }
}
</style>
